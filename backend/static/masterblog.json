{
  "swagger": "2.0",
  "info": {
    "title": "Masterblog API",
    "version": "1.0.0"
  },
  "servers": [
    { "url": "http://localhost:5002" }
  ],
  "tags": [
    { "name": "Post", "description": "Post API - CRUD operations" }
  ],
  "paths": {
    "/api/posts": {
      "get": {
        "summary": "Returns all posts",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "sort",
            "in": "query",
            "type": "string",
            "description": "Field to sort by (title or content)",
            "required": false
          },
          {
            "name": "direction",
            "in": "query",
            "type": "string",
            "description": "Sort direction (asc or desc)",
            "required": false
          }
        ],
        "responses": {
          "200": { "description": "Successful operation" },
          "400": { "description": "Invalid sort field or direction" }
        }
      },
      "post": {
        "summary": "Add a new post",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "in": "body",
            "name": "body",
            "description": "Post object to add",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              },
              "required": ["title", "content"]
            }
          }
        ],
        "responses": {
          "201": { "description": "Post created successfully" },
          "400": { "description": "Missing title or content" }
        }
      }
    },
    "/api/posts/{post_id}": {
      "put": {
        "summary": "Update an existing post",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "type": "integer",
            "required": true,
            "description": "ID of the post to update"
          },
          {
            "in": "body",
            "name": "body",
            "description": "Updated post object",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "title": { "type": "string" },
                "content": { "type": "string" }
              },
              "required": ["title", "content"]
            }
          }
        ],
        "responses": {
          "200": { "description": "Post updated successfully" },
          "400": { "description": "Missing title or content" },
          "404": { "description": "Post not found" }
        }
      },
      "delete": {
        "summary": "Delete a post",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "post_id",
            "in": "path",
            "type": "integer",
            "required": true,
            "description": "ID of the post to delete"
          }
        ],
        "responses": {
          "200": { "description": "Post deleted successfully" },
          "404": { "description": "Post not found" }
        }
      }
    },
    "/api/posts/search": {
      "get": {
        "summary": "Search posts by title or content",
        "produces": ["application/json"],
        "tags": ["Post"],
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Search term for title"
          },
          {
            "name": "content",
            "in": "query",
            "type": "string",
            "required": false,
            "description": "Search term for content"
          }
        ],
        "responses": {
          "200": { "description": "List of matching posts" }
        }
      }
    }
  }
}